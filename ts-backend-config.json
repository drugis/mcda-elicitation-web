    "baseUrl": "./",
    "paths": {
      "@shared/*": ["shared/*"]
    },
    "outDir": "./tscomp",
    "esModuleInterop": true,
    "module": "commonjs",
    "sourceMap": true,
    "allowJs": true,
    "skipLibCheck": true
  },
  "include": ["index.ts", "node-backend/**/*.ts"],
  "exclude": ["node_modules"]
}
