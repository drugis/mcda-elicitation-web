{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@shared/*": ["shared/*"]
    },
    "allowSyntheticDefaultImports": true,
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es6",
    "jsx": "react-jsx",
    "allowJs": true,
    "esModuleInterop": true
  },
  "exclude": ["node_modules", "dist", "tscomp", "test"]
}
